# ============================================
# Tabular Review - Environment Variables
# ============================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# ------ REQUIRED ------

# Google Gemini API Key â€” used server-side only (never exposed to the browser)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_google_api_key_here

# ------ OPTIONAL ------

# Backend API URL for document conversion (Docling)
# Default: http://localhost:8000
# For Docker: http://backend:8000
VITE_API_URL=http://localhost:8000

# Allowed frontend origin(s) for CORS (comma-separated)
FRONTEND_ORIGIN=http://localhost:5173

# ------ Docker-only ------

# Python output buffering (keep 1 for Docker logs)
PYTHONUNBUFFERED=1

# Node environment
NODE_ENV=production
